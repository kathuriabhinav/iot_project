<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
    tools:context=".DashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="DASHBOARD"
                android:textSize="30sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:padding="20dp"
                android:id="@+id/userID"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

<!--                    <Button-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_weight="1"-->
<!--                        android:id="@+id/edit_favorites"-->
<!--                        android:layout_marginLeft="20dp"-->
<!--                        android:backgroundTint="@color/black"-->
<!--                        android:layout_marginRight="20dp"-->
<!--                        android:paddingTop="15dp"-->
<!--                        android:paddingBottom="20dp"-->
<!--                        android:text="Edit Favorites"/>-->

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/search_manually"
                        android:backgroundTint="@color/black"
                        android:layout_marginRight="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="20dp"
                        android:text="Search manually"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingTop="30dp"
                    android:id="@+id/no_devices_text"
                    android:text="No devices are in favorites"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:id="@+id/liner_layout_for_data_in_dashboard_activity"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>